{
  "name": "go-template-support",
  "displayName": "go-template-support",
  "description": "Syntax highlighting, formatting, and autocomplete for Go templates",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "go",
    "golang",
    "template",
    "gotmpl",
    "tmpl"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gotmpl",
        "aliases": [
          "Go Template",
          "gotmpl"
        ],
        "extensions": [
          ".gotmpl",
          ".tmpl",
          ".tpl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gotmpl",
        "scopeName": "source.gotmpl",
        "path": "./syntaxes/gotmpl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gotmpl",
        "path": "./snippets/gotmpl.json"
      }
    ],
    "configurationDefaults": {
      "[gotmpl]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
