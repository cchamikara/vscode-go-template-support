{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Go Template",
  "scopeName": "source.gotmpl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#template-actions"
    },
    {
      "include": "#text-content"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.gotmpl",
          "begin": "{{-?\\s*/\\*",
          "end": "\\*/\\s*-?}}",
          "patterns": [
            {
              "name": "comment.block.content.gotmpl",
              "match": "."
            }
          ]
        }
      ]
    },
    "template-actions": {
      "patterns": [
        {
          "name": "meta.template.action.gotmpl",
          "begin": "{{-?",
          "end": "-?}}",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template.begin.gotmpl"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.template.end.gotmpl"
            }
          },
          "patterns": [
            {
              "include": "#control-keywords"
            },
            {
              "include": "#builtin-functions"
            },
            {
              "include": "#variables"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#operators"
            },
            {
              "include": "#parentheses"
            },
            {
              "include": "#function-calls"
            },
            {
              "include": "#fields"
            }
          ]
        }
      ]
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "keyword.control.gotmpl",
          "match": "\\b(if|else|end|with|range|define|template|block|break|continue)\\b"
        }
      ]
    },
    "builtin-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.gotmpl",
          "match": "\\b(and|call|html|index|slice|js|len|not|or|print|printf|println|urlquery|eq|ne|lt|le|gt|ge)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.dollar.gotmpl",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gotmpl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gotmpl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.gotmpl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.gotmpl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.gotmpl",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.gotmpl",
          "match": "\\b[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.gotmpl",
          "match": ":=|="
        },
        {
          "name": "keyword.operator.pipe.gotmpl",
          "match": "\\|"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "entity.name.function.gotmpl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s+)"
        }
      ]
    },
    "fields": {
      "patterns": [
        {
          "name": "variable.other.property.gotmpl",
          "match": "\\.([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "parentheses": {
      "patterns": [
        {
          "name": "meta.parens.gotmpl",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            {
              "include": "#strings"
            },
            {
              "include": "#variables"
            },
            {
              "include": "#fields"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#function-calls"
            }
          ]
        }
      ]
    },
    "text-content": {
      "patterns": [
        {
          "name": "text.gotmpl",
          "match": "[^{]+"
        }
      ]
    }
  }
}

