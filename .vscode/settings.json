{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.exclude": {
    "out": false,
    "node_modules": true
  },
  "search.exclude": {
    "out": true,
    "node_modules": true
  },
  "typescript.tsc.autoDetect": "on"
}